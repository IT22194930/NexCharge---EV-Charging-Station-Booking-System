<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="3dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/nexcharge_surface"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Station Icon -->
        <ImageView
            android:id="@+id/imageViewStationIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_charging_station"
            app:tint="@color/nexcharge_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Station Name -->
        <TextView
            android:id="@+id/textViewStationName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Station Name"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/imageViewStationIcon"
            app:layout_constraintEnd_toStartOf="@id/buttonBookStation"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Green Energy Hub" />

        <!-- Book Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonBookStation"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Book"
            android:textSize="11sp"
            android:minWidth="50dp"
            style="@style/Widget.Material3.Button"
            app:backgroundTint="@color/nexcharge_primary"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Location -->
        <TextView
            android:id="@+id/textViewStationLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="13sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@id/textViewStationName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewStationName"
            tools:text="Colombo 05, Sri Lanka" />

        <!-- Type Tag -->
        <TextView
            android:id="@+id/textViewStationType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textSize="10sp"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/nexcharge_accent"
            android:textColor="@android:color/white"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="@id/textViewStationName"
            app:layout_constraintTop_toBottomOf="@id/textViewStationLocation"
            tools:text="Fast" />

        <!-- Available Slots -->
        <TextView
            android:id="@+id/textViewAvailableSlots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slots"
            android:textSize="11sp"
            android:textColor="@color/nexcharge_primary"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_available_slots"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/textViewStationType"
            app:layout_constraintTop_toTopOf="@id/textViewStationType"
            app:layout_constraintBottom_toBottomOf="@id/textViewStationType"
            tools:text="5 available" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>