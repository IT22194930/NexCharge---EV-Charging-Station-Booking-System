<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="32dp"
    android:background="@color/nexcharge_surface">

    <!-- Success Header -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/status_active">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_check_circle"
                android:layout_marginEnd="12dp"
                android:tint="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Booking Confirmed!"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Booking Details Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/nexcharge_surface_variant">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Booking ID -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Booking ID:"
                    android:textSize="14sp"
                    android:textColor="@color/nexcharge_text_secondary" />

                <TextView
                    android:id="@+id/textViewBookingId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BK123456"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/nexcharge_text_primary" />

            </LinearLayout>

            <!-- Station Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Station:"
                    android:textSize="14sp"
                    android:textColor="@color/nexcharge_text_secondary" />

                <TextView
                    android:id="@+id/textViewStationName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Station Name"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/nexcharge_text_primary" />

            </LinearLayout>

            <!-- Date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Date:"
                    android:textSize="14sp"
                    android:textColor="@color/nexcharge_text_secondary" />

                <TextView
                    android:id="@+id/textViewBookingDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025-10-03"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/nexcharge_text_primary" />

            </LinearLayout>

            <!-- Time Slot -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Time Slot:"
                    android:textSize="14sp"
                    android:textColor="@color/nexcharge_text_secondary" />

                <TextView
                    android:id="@+id/textViewTimeSlot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:00 - 15:00"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/nexcharge_text_primary" />

            </LinearLayout>

            <!-- Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Status:"
                    android:textSize="14sp"
                    android:textColor="@color/nexcharge_text_secondary" />

                <TextView
                    android:id="@+id/textViewBookingStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/status_active_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:text="STATUS"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:minWidth="60dp"
                    android:gravity="center"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Info Message -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You can view and manage this booking in the Reservations tab. Please arrive at the station during your scheduled time slot."
        android:textSize="14sp"
        android:textColor="@color/nexcharge_text_secondary"
        android:textAlignment="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="16dp" />

</LinearLayout>