<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/nexcharge_surface"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row: Station Name and Book Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_charging_station"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/nexcharge_primary" />

                <TextView
                    android:id="@+id/textViewStationName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Station Name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Green Energy Hub" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonBookStation"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Book"
                android:textSize="12sp"
                android:minWidth="60dp"
                style="@style/Widget.Material3.Button"
                app:backgroundTint="@color/nexcharge_primary"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Location Row -->
        <TextView
            android:id="@+id/textViewStationLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="8dp"
            android:drawableStart="@android:drawable/ic_menu_mylocation"
            android:drawablePadding="6dp"
            android:drawableTint="?attr/colorOnSurfaceVariant"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Colombo 05, Sri Lanka" />

        <!-- Type and Slots Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textViewStationType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textSize="11sp"
                android:background="@drawable/rounded_background"
                android:backgroundTint="@color/nexcharge_accent"
                android:textColor="@android:color/white"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:layout_marginEnd="12dp"
                tools:text="Fast Charging" />

            <TextView
                android:id="@+id/textViewAvailableSlots"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Slots"
                android:textSize="12sp"
                android:textColor="@color/nexcharge_primary"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_available_slots"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                tools:text="5 available" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>