<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Error Icon -->
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_error"
            android:tint="@color/nexcharge_error"
            android:contentDescription="Error Icon" />

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âŒ Station Assignment Error"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/nexcharge_error"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Message -->
        <TextView
            android:id="@+id/messageText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/nexcharge_text_primary"
            android:lineSpacingMultiplier="1.2"
            android:layout_marginBottom="24dp" />

        <!-- OK Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/nexcharge_error"
            app:cornerRadius="8dp"
            android:paddingVertical="12dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>