<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/professional_gradient_background"
    tools:context=".MainActivity">

    <!-- Professional Welcome Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/welcomeCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="48dp">

            <!-- NexCharge Logo and Brand -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/evlogo"
                android:layout_marginBottom="24dp"
                android:contentDescription="NexCharge Logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NexCharge"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/nexcharge_primary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewHello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premium EV Charging Solutions"
                android:textSize="16sp"
                android:textColor="@color/nexcharge_text_secondary"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join the future of electric vehicle charging with our professional platform"
                android:textSize="14sp"
                android:textColor="@color/nexcharge_text_hint"
                android:gravity="center"
                android:layout_marginBottom="40dp" />

            <!-- Get Started Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonGoToRegister"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Get Started"
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/Widget.Material3.Button.UnelevatedButton"
                app:backgroundTint="@color/nexcharge_primary"
                app:cornerRadius="16dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
