<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/nexcharge_background_start">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Welcome Header Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/welcomeHeaderCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/nexcharge_surface"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="20dp"
                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Dashboard Icon"
                    android:src="@drawable/evlogo" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewWelcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome to your Dashboard"
                        android:textColor="@color/nexcharge_text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Manage your EV charging experience"
                        android:textColor="@color/nexcharge_text_secondary"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Stats Cards -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTotalStations"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="@color/nexcharge_surface"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toStartOf="@id/cardActiveBookings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/welcomeHeaderCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/professional_gradient_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_check_circle"
                    android:tint="@color/status_active" />

                <TextView
                    android:id="@+id/textViewTotalStations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Approved\nReservations: 0"
                    android:textAlignment="center"
                    android:textColor="@color/nexcharge_text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardActiveBookings"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/nexcharge_surface"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cardTotalStations"
            app:layout_constraintTop_toBottomOf="@id/welcomeHeaderCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/professional_gradient_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_waiting"
                    android:tint="@color/status_pending" />

                <TextView
                    android:id="@+id/textViewActiveBookings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Pending\nReservations: 0"
                    android:textAlignment="center"
                    android:textColor="@color/nexcharge_text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


        <!-- Quick Actions -->
        <TextView
            android:id="@+id/textViewQuickActions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Quick Actions"
            android:textColor="@color/nexcharge_text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mapCard" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonAddStation"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Add New Station"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/nexcharge_text_primary"
            app:strokeColor="@color/nexcharge_primary"
            app:icon="@drawable/ic_bookings"
            app:iconTint="@color/nexcharge_primary"
            app:layout_constraintTop_toBottomOf="@id/textViewQuickActions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/buttonViewReports" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonViewReports"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="View Reports"
            android:textColor="@color/nexcharge_text_primary"
            app:strokeColor="@color/nexcharge_primary"
            app:icon="@drawable/ic_add"
            app:iconTint="@color/nexcharge_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/buttonAddStation"
            app:layout_constraintTop_toBottomOf="@id/textViewQuickActions" />

        <!-- Map Section -->
        <TextView
            android:id="@+id/textViewMapTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Nearby Charging Stations"
            android:textColor="@color/nexcharge_text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardActiveBookings" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mapCard"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/nexcharge_surface"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewMapTitle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <fragment
                    android:id="@+id/mapFragment"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/nexcharge_surface"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Search Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_search"
                            android:tint="@color/nexcharge_primary"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Find charging stations near you"
                            android:textColor="@color/nexcharge_text_primary"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonFindStations"
                            style="@style/Widget.Material3.Button"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/nexcharge_primary"
                            android:text="Find Stations"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_charging_station"
                            app:iconSize="16dp"
                            app:iconTint="@android:color/white" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonLocateMe"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/nexcharge_primary"
                            app:cornerRadius="12dp"
                            app:icon="@android:drawable/ic_menu_mylocation"
                            app:iconSize="30dp"
                            app:iconTint="@color/nexcharge_primary"
                            app:strokeColor="@color/nexcharge_primary" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>