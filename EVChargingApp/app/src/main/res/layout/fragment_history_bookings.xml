<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nexcharge_background_start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

    <!-- Professional Header Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/nexcharge_surface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="20dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_reservations"
                android:layout_marginEnd="12dp"
                android:tint="@color/nexcharge_primary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booking History"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/nexcharge_text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your completed and cancelled sessions"
                    android:textSize="14sp"
                    android:textColor="@color/nexcharge_text_secondary"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Filter Status Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardFilterStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:visibility="gone"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp"
        app:cardBackgroundColor="@color/nexcharge_primary_variant">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_filter"
                android:layout_marginEnd="8dp"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/textViewFilterStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Filtered: October 2025"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/imageViewClearFilter"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_close"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Clear filter"
                android:tint="@color/white" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Professional Progress Indicator -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/progressCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/nexcharge_surface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="20dp">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp"
                android:indeterminateTint="@color/nexcharge_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading booking history..."
                android:textColor="@color/nexcharge_text_secondary" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- History Bookings List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHistoryBookings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_booking" />

    <!-- Professional Empty State Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/emptyStateCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/nexcharge_surface">

        <LinearLayout
            android:id="@+id/layoutEmptyState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="40dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/nexcharge_primary_variant">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_reservations"
                    android:tint="@color/nexcharge_primary" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/textViewNoBookings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No History Available"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/nexcharge_text_primary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your completed and cancelled bookings\nwill appear here once you start using NexCharge."
                android:textSize="14sp"
                android:textColor="@color/nexcharge_text_secondary"
                android:textAlignment="center"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Filter Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_filter"
        android:contentDescription="Filter bookings by date"
        app:backgroundTint="@color/nexcharge_primary"
        app:tint="@color/white"
        app:elevation="8dp"
        app:pressedTranslationZ="12dp" />

</RelativeLayout>