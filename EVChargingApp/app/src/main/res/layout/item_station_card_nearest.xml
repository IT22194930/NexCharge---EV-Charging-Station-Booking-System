<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/nexcharge_surface"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical">


        <!-- Station Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Station Name -->
            <TextView
                android:id="@+id/textViewStationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Station Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/nexcharge_text_primary"
                android:layout_marginBottom="4dp" />

            <!-- Location -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_status"
                    android:layout_marginEnd="4dp"
                    android:tint="@color/nexcharge_text_secondary" />

                <TextView
                    android:id="@+id/textViewStationLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Station Location"
                    android:textSize="14sp"
                    android:textColor="@color/nexcharge_text_secondary" />

            </LinearLayout>

            <!-- Station Details Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/textViewStationType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type: AC"
                    android:textSize="12sp"
                    android:textColor="@color/nexcharge_text_secondary"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/textViewStationSlots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€¢ 5 slots"
                    android:textSize="12sp"
                    android:textColor="@color/nexcharge_text_secondary" />

            </LinearLayout>

            <!-- Distance and Status Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textViewDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.1 km away"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/nexcharge_primary"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/textViewStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STATUS"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/status_active_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:minWidth="48dp"
                    android:gravity="center"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

        <!-- Arrow Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_forward"
            android:tint="@color/nexcharge_text_secondary" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>