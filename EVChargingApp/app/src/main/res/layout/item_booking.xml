<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/nexcharge_surface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Booking Icon with background -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/iconCard"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@color/nexcharge_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/imageViewBookingIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_agenda"
                android:tint="@android:color/white" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/textViewStationName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Station Name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/nexcharge_text_primary"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/iconCard"
            app:layout_constraintStart_toEndOf="@id/iconCard"
            app:layout_constraintEnd_toStartOf="@id/statusCard" />

        <!-- Status with card background -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/statusCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/status_completed"
            app:layout_constraintTop_toTopOf="@id/iconCard"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/textViewStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/textViewCustomerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/textViewStationName"
            app:layout_constraintStart_toEndOf="@id/iconCard"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textViewDateTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Booking time will be displayed here"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewCustomerName" />

        <TextView
            android:id="@+id/textViewDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration: 1 hour"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/textViewDateTime"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/layoutButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/textViewDuration"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonViewQR"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="View QR"
                android:textColor="@color/nexcharge_primary"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                app:icon="@android:drawable/ic_dialog_info"
                app:iconSize="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonUpdate"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="Update"
                android:textColor="@color/nexcharge_secondary"
                android:textSize="12sp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:visibility="gone"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconSize="16dp"
                app:strokeColor="@color/nexcharge_secondary"
                app:iconTint="@color/nexcharge_secondary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonDelete"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="Delete"
                android:textSize="12sp"
                android:layout_marginStart="4dp"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconSize="16dp"
                app:strokeColor="@android:color/holo_red_dark"
                android:textColor="@android:color/holo_red_dark"
                app:iconTint="@android:color/holo_red_dark" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>