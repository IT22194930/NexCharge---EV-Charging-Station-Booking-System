        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EVChargingApp"
        android:usesCleartextTraffic="true"
        tools:targetApi="31" >

        <!-- Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBOW4A6zV3-DL0k5R41T7zPgIPjp6_KZBc" />

        <activity
            android:name=".ui.LauncherActivity"
            android:exported="true"
            android:theme="@style/Theme.EVChargingApp.Splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ui.RegistrationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.evowner.EVOwnerHomeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.stationoperator.StationOperatorHomeActivity"
            android:exported="false" />
